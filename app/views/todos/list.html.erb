<h1>Lista</h1>
<div class="row">
 <div class="col-6">
   Pendiente
   <% @todos.each do |t|%>
     <% if t.completed != true %>
       <div class="">
         <%= t.description%>
       </div>
     <% end%>
   <% end%>
 </div>

 <div class="col-6">
   Completado
   <% @todos.each do |t|%>
     <% if t.completed == true %>
       <div class="">
         <%= t.description%>
       </div>
     <% end%>
   <% end%>
 </div>
